@model IEnumerable<FileSharer.Web.Models.File.FileViewModel>

@{
    ViewData["Title"] = "Files list";
}

<h1 class="text-dark">Files list</h1>

<p>
    <a class="btn btn-primary" asp-action="Upload">Upload my file</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var file in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => file.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => file.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => file.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => file.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => file.CreateDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = file.Id })
                @Html.ActionLink("Details", "Details", new { id = file.Id })
                <button class="btn btn-danger" data-toggle="modal" data-target="#modal-@file.Id">Delete</button>
                @await Html.PartialAsync("_ModalDeletePartial", new DeleteItemModel { Id = file.Id, Name = file.Name })
            </td>
        </tr>
}
    </tbody>
</table>
